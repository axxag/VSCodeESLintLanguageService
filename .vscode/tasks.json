{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Watch",
            "type": "npm",
            "script": "watch",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Rebuild",
            "type": "npm",
            "script": "rebuild",
            "problemMatcher": "$tsc"
        },
        {
            "label": "Lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": "$tslint5",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
